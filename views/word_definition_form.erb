<h1>Add a definition to <%= @word.word() %> </h1>

<form action="/definitions" method="post">
  <input id='word_id' name='word_id' type='hidden' value='<%= @word.id() %>'>

  <label for='definition'>Definition</label>
  <input class="btn btn-default" id='definition' name='definition' type='text'>

  <button type="submit" class="btn btn-danger">Add a Definition</button>
</form>
